# =====================================================================
# FUNCTIONS
# =====================================================================

def mts_model(r, a, b):
    return a * (1 - np.exp(-b * r))

def fit_mts_params(r, v):
    a0 = max(v)
    b0 = 0.4
    popt, _ = curve_fit(mts_model, r, v, p0=[a0,b0],
                        bounds=([0,0],[500,5]))
    return popt[0], popt[1]

def star_formation_radius(r, v):
    a, b = fit_mts_params(r, v)
    R_last = r[-1]
    R_90 = np.log(10) / b   # 90% of asymptotic speed
    return R_last, R_90

gal_list = []
for name, d in EXPANDED_SPARC_DATA.items():
    R_last, R_90 = star_formation_radius(d['r'], d['v'])
    gal_list.append({
        "name": name,
        "mass": d["M_total"],
        "R_last": R_last,
        "R_90": R_90
    })

gal_list = sorted(gal_list, key=lambda g: g["mass"])


# =====================================================================
# FIT R ∝ Mᵇ
# =====================================================================
def fit_scaling(M, R):
    lm = np.log10(M)
    lr = np.log10(R)
    slope, intercept, r_val, p_val, se = linregress(lm, lr)
    return slope, intercept, r_val**2, se

M = np.array([g["mass"] for g in gal_list])
R_last = np.array([g["R_last"] for g in gal_list])
R_90   = np.array([g["R_90"]   for g in gal_list])

b_last, A_last, r2_last, se_last = fit_scaling(M, R_last)
b_90,   A_90,   r2_90,   se_90   = fit_scaling(M, R_90)


# =====================================================================
# PRINT RESULTS
# =====================================================================
print("\n================ RESULTS ================\n")
print(f"R_last scaling exponent b = {b_last:.3f} ± {se_last:.3f}   (R²={r2_last:.4f})")
print(f"R_90   scaling exponent b = {b_90:.3f} ± {se_90:.3f}     (R²={r2_90:.4f})")
print("\n=========================================\n")


# =====================================================================
# PLOTS
# =====================================================================
plt.figure(figsize=(12,6))

plt.subplot(1,2,1)
plt.loglog(M, R_last, 'o', label="Observed R_last")
plt.loglog(M, 10**A_last * M**b_last, '-', label=f"Fit b={b_last:.3f}")
plt.xlabel("Mass (10^9 Msun)")
plt.ylabel("R_last (kpc)")
plt.title("Star-Formation Radius vs Mass (R_last)")
plt.legend()

plt.subplot(1,2,2)
plt.loglog(M, R_90, 'o', label="R_90 (model)")
plt.loglog(M, 10**A_90 * M**b_90, '-', label=f"Fit b={b_90:.3f}")
plt.xlabel("Mass (10^9 Msun)")
plt.ylabel("R_90 (kpc)")
plt.title("Predicted Star-Formation Cutoff Radius (90%)")
plt.legend()

plt.tight_layout()
plt.show()
