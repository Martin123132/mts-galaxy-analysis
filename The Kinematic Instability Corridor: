# ================================
# 2. Convert DataFrame and Compute Parameters
# ================================
df_galaxies = pd.DataFrame(data)

# Convert logM to linear baryonic mass (10^9 M☉)
df_galaxies['M'] = 10 ** df_galaxies['logM'] / 1e9

# Universal composite exponent
M_COMPOSITE = 1.878

# Approximate slope exponent m (proxy if not measured)
df_galaxies['m'] = M_COMPOSITE - 0.3 * np.exp(-df_galaxies['v'] / 150)

# Assign track based on velocity
df_galaxies['track'] = np.where(df_galaxies['v'] < 100, 'upper', 'lower')

# ================================
# 3. Constants
# ================================
c = 3e5  # km/s
gamma = 0.2016  # MTS coupling
sigma_v = 20    # width parameter

# ================================
# 4. Velocity Gap and Critical Corridor
# ================================
upper_v_max = df_galaxies[df_galaxies['track'] == 'upper']['v'].max()
lower_v_min = df_galaxies[df_galaxies['track'] == 'lower']['v'].min()
v_gap_start = upper_v_max
v_gap_end = lower_v_min
v_gap_center = (v_gap_start + v_gap_end) / 2
v_critical_predicted = v_gap_center

# ================================
# 5. Persistence & Instability
# ================================
df_galaxies['p_v'] = 1 - np.exp(-np.power(df_galaxies['v'] - v_critical_predicted, 2) / (2 * sigma_v ** 2))
df_galaxies['scatter'] = np.abs(df_galaxies['m'] - M_COMPOSITE)

# orbital period proxy (25 kpc radius)
r_char = 25  # kpc
df_galaxies['period_proxy'] = r_char / df_galaxies['v']

# instability index
df_galaxies['instability_index'] = df_galaxies['scatter'] / (df_galaxies['period_proxy'] * (df_galaxies['p_v'] + 0.01))

# corridor condition
df_galaxies['in_corridor'] = np.abs(df_galaxies['v'] - v_critical_predicted) < sigma_v

# ================================
# 6. Statistics
# ================================
gap_galaxies = df_galaxies[(df_galaxies['v'] >= v_gap_start) & (df_galaxies['v'] <= v_gap_end)]
corridor_galaxies = df_galaxies[df_galaxies['in_corridor']]

corridor_p_mean = corridor_galaxies['p_v'].mean() if not corridor_galaxies.empty else 0
outside_p_mean = df_galaxies[~df_galaxies['in_corridor']]['p_v'].mean() if not df_galaxies[~df_galaxies['in_corridor']].empty else 0
corridor_I_mean = corridor_galaxies['instability_index'].mean() if not corridor_galaxies.empty else 0
outside_I_mean = df_galaxies[~df_galaxies['in_corridor']]['instability_index'].mean() if not df_galaxies[~df_galaxies['in_corridor']].empty else 0

# ================================
# 7. Results
# ================================
print("=== MTS Instability Corridor Analysis ===")
print("-" * 40)
print(f"Observed Gap Velocity Range: {v_gap_start:.0f}–{v_gap_end:.0f} km/s")
print(f"Predicted Corridor Center (v_c): {v_critical_predicted:.0f} km/s (σ_v = {sigma_v})")
print(f"Number of Galaxies in Dataset: {len(df_galaxies)}")
print(f"Number of Galaxies in Observed Gap: {len(gap_galaxies)}")
print(f"Number of Galaxies in Predicted Corridor (v_c ± σ_v): {len(corridor_galaxies)}")
print("-" * 40)
print("Persistence (p_v = 1 - exp[-(v - v_c)²/(2σ²)]):")
print(f"  Mean Persistence in Corridor: {corridor_p_mean:.4f}")
print(f"  Mean Persistence Outside Corridor: {outside_p_mean:.4f}")
print("-" * 40)
print("Instability Index (I = scatter / (period × persistence)):")
print(f"  Mean Instability Index in Corridor: {corridor_I_mean:.4f}")
print(f"  Mean Instability Index Outside Corridor: {outside_I_mean:.4f}")
print("-" * 40)

print("\nDetailed Galaxy Data:")
print(df_galaxies[['name', 'v', 'm', 'track', 'p_v', 'instability_index', 'in_corridor']].to_string(index=False))

# ================================
# 8. Plot Instability vs Velocity
# ================================
plt.figure(figsize=(12, 7))
colors = df_galaxies['track'].map({'upper': 'blue', 'lower': 'red'})
corridor_mask = df_galaxies['in_corridor']

plt.scatter(df_galaxies[~corridor_mask]['v'], df_galaxies[~corridor_mask]['instability_index'],
            c=colors[~corridor_mask], alpha=0.6, label='Outside Corridor')
plt.scatter(df_galaxies[corridor_mask]['v'], df_galaxies[corridor_mask]['instability_index'],
            c='green', edgecolor='black', s=80, label='In Corridor')

plt.axvline(v_critical_predicted, color='black', linestyle='--', label='Critical Velocity')
plt.xlabel("Flat Rotation Velocity Vf (km/s)")
plt.ylabel("Instability Index")
plt.title("MTS Instability Corridor Across SPARC Galaxies (~170 sample)")
plt.legend()
plt.grid(True)
plt.show()

