# =====================================================================
#  MTS ROTATION CURVE MODEL (SAME AS YOU ALREADY USED)
# =====================================================================
def mts_model(r, a, b):
    return a * (1 - np.exp(-b * r))

def fit_velocity(r, v_obs):
    a0 = np.max(v_obs)
    b0 = 0.4
    popt, _ = curve_fit(mts_model, r, v_obs, p0=[a0, b0],
                        bounds=([0,0],[500,5]))
    return popt[0]   # asymptotic velocity V∞


# =====================================================================
#  EXTRACT V∞ FOR ALL GALAXIES
# =====================================================================
V_inf = []
M_vals = []

for name, d in EXPANDED_SPARC_DATA.items():
    V_asym = fit_velocity(d["r"], d["v"])
    V_inf.append(V_asym)
    M_vals.append(d["M_total"])

V_inf = np.array(V_inf)
M_vals = np.array(M_vals)


# =====================================================================
#  BTFR FITS
# =====================================================================
def fit_btfr(x, y):
    lx = np.log10(x)
    ly = np.log10(y)
    slope, intercept, r1, p, se = linregress(lx, ly)
    return slope, intercept, r1**2, se

# M = A * V^α
alpha, A1, r2_alpha, se_alpha = fit_btfr(V_inf, M_vals)

# V = B * M^β  (β = 1/α ideally)
beta, B1, r2_beta, se_beta = fit_btfr(M_vals, V_inf)


# =====================================================================
#  PRINT RESULTS
# =====================================================================
print("\n===================== BTFR RESULTS =====================\n")

print(f"Mass-side BTFR:   M ∝ V^{alpha:.3f}   (R² = {r2_alpha:.4f})")
print(f"Velocity-side:    V ∝ M^{beta:.3f}     (R² = {r2_beta:.4f})")

print(f"\nUncertainty α: ±{se_alpha:.3f}")
print(f"Uncertainty β: ±{se_beta:.3f}")
print("\n========================================================\n")


# =====================================================================
#  PLOTS
# =====================================================================
plt.figure(figsize=(14,6))

# ---- MASS VS VELOCITY ----
plt.subplot(1,2,1)
plt.loglog(V_inf, M_vals, 'o', label="Data")
fit_line = 10**A1 * V_inf**alpha
plt.loglog(V_inf, fit_line, '-', label=f"Fit α = {alpha:.3f}")
plt.xlabel("V∞ (km/s)")
plt.ylabel("Mass (10^9 Msun)")
plt.title("BTFR: Mass ∝ V^α")
plt.legend()

# ---- VELOCITY VS MASS ----
plt.subplot(1,2,2)
plt.loglog(M_vals, V_inf, 'o', label="Data")
fit_line2 = 10**B1 * M_vals**beta
plt.loglog(M_vals, fit_line2, '-', label=f"Fit β = {beta:.3f}")
plt.xlabel("Mass (10^9 Msun)")
plt.ylabel("V∞ (km/s)")
plt.title("BTFR: Velocity ∝ M^β")
plt.legend()

plt.tight_layout()
plt.show()

